{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@el-cap/chart-widget": ["packages/chart-widget/src/index.ts"],
      "@el-cap/chat": ["packages/chat/src/index.ts"],
      "@el-cap/coin": ["packages/coin/src/index.ts"],
      "@el-cap/el-cap-layout": ["packages/el-cap-layout/src/index.ts"],
      "@el-cap/feed": ["packages/feed/src/index.ts"],
      "@el-cap/interfaces": ["packages/interfaces/src/index.ts"],
      "@el-cap/layout": ["packages/layout/src/index.ts"],
      "@el-cap/store": ["packages/store/src/index.ts"],
      "@el-cap/token-table": ["packages/token-table/src/index.ts"],
      "@el-cap/top-coins-card": ["packages/top-coins-card/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
